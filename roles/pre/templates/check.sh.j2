#!/bin/sh
errorExit() {
    echo "*** $*" 1>&2
    exit 1
}
curl --silent --max-time 2 --insecure https://localhost:{{rke2_apiserver_port}}/ -o /dev/null || errorExit "Error GET https://localhost:{{rke2_apiserver_port}}/"
if ip addr | grep -q {{rke2_lb_addr}}; then
    curl --silent --max-time 2 --insecure https://{{rke2_lb_addr}}:{{rke2_apiserver_port}}/ -o /dev/null || errorExit "Error GET https://{{rke2_lb_addr}}:{{rke2_apiserver_port}}/"
fi
